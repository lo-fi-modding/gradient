{
  "multipart": [
    {
      "when": {
        "facing": "north"
      },
      "apply": {
        "model": "gradient:block/firepit"
      }
    },
    {
      "when": {
        "facing": "east"
      },
      "apply": {
        "model": "gradient:block/firepit",
        "y": 90
      }
    },
    {
      "when": {
        "facing": "south"
      },
      "apply": {
        "model": "gradient:block/firepit",
        "y": 180
      }
    },
    {
      "when": {
        "facing": "west"
      },
      "apply": {
        "model": "gradient:block/firepit",
        "y": 270
      }
    },
    {
      "when": {
        "has_furnace": "true",
        "facing": "north"
      },
      "apply": {
        "model": "gradient:block/clay_furnace_used"
      }
    },
    {
      "when": {
        "has_furnace": "true",
        "facing": "east"
      },
      "apply": {
        "model": "gradient:block/clay_furnace_used",
        "y": 90
      }
    },
    {
      "when": {
        "has_furnace": "true",
        "facing": "south"
      },
      "apply": {
        "model": "gradient:block/clay_furnace_used",
        "y": 180
      }
    },
    {
      "when": {
        "has_furnace": "true",
        "facing": "west"
      },
      "apply": {
        "model": "gradient:block/clay_furnace_used",
        "y": 270
      }
    }
  ]
}